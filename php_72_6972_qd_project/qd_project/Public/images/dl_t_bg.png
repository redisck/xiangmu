    function PageASideBindEvent(elRefer,eventType,handler)
    {
        if(typeof elRefer!="object"||typeof eventType!="string"||(typeof handler!="function"&&typeof handler!="object"))
            return;
        if(elRefer.attachEvent)
            elRefer.attachEvent("on"+eventType,handler);
        else if(elRefer.addEventListener)
            elRefer.addEventListener(eventType,handler,false);
    }

